<Layout>
  <PageHeader>Real Mirror</PageHeader>
  <div class="left">
    <Picture src="litto_realmirror_catalogue.jpg" height="800" width="1200" />

    <Picture src="litto_realmirror_preview.jpg" height="667" width="1000" />

    <p class="credits">photo: Verena Tscherner</p>
