{
  "extends": "astro/tsconfigs/strict",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components/index"],
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@lib": ["src/lib/index"],
      "@lib/*": ["src/lib/*"],
      "@layouts/*": ["src/layouts/*"],
      "@public/*": ["public/*"]
    }
  }
}
